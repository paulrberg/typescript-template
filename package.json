{
  "name": "@paulrberg/typescript-template",
  "description": "Template for TypeScript projects",
  "version": "1.0.0",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://paulrberg.com"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "pinst": "^3.0.0",
    "prettier": "^2.5.1",
    "shx": "^0.3.4",
    "ts-node": "^10.7.0",
    "typescript": "<4.6.0"
  },
  "files": [
    "/dist/**/*.d.ts",
    "/dist/**/*.d.ts.map",
    "/dist/**/*.js",
    "/dist/**/*.js.map"
  ],
  "main": "./dist/index.js",
  "packageManager": "yarn@3.2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "clean": "shx rm -rf ./dist",
    "commit": "git-cz",
    "lint": "yarn lint:ts && yarn prettier:check && yarn typecheck",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --config ./.prettierrc.yaml --ignore-path ./.prettierignore --write \"**/*.{js,json,md,ts,yaml,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml --ignore-path ./.prettierignore \"**/*.{js,json,md,ts,yaml,yml}\"",
    "typecheck": "tsc --noEmit"
  },
  "types": "./dist/index.d.ts"
}
